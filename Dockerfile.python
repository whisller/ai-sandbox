FROM ai-sandbox:claude

USER root

RUN pip3 install --no-cache-dir --break-system-packages \
    uv \
    poetry \
    ruff \
    pytest \
    pytest-cov \
    mypy

RUN uv --version && \
    poetry --version && \
    ruff --version && \
    pytest --version && \
    mypy --version

USER agent
